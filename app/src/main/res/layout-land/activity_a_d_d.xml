<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADD"
    android:background="@drawable/bbl"

 >


    <Button
        android:id="@+id/add_signup"
        android:background="@drawable/round_buttons"
        android:text="সাইন-আপ"
        android:fontFamily="@font/ss"
        android:layout_below="@id/textView2"
        android:layout_alignLeft="@id/textView11"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_18sdp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
         />

        <Button
            android:id="@+id/add_login"
            android:background="@drawable/round_buttons"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="লগ-ইন"
            android:layout_alignRight="@id/textView11"
            android:fontFamily="@font/ss"
            android:layout_below="@id/textView2"
            android:textSize="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintEnd_toEndOf="parent"

            />








    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/nav_back"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menunavbar"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
         />


    <TextView
    android:id="@+id/textView11"
    android:textColor="#000000"
    android:background="#32FEFEFE"
    android:fontFamily="@font/ss"
    android:textSize="@dimen/_28sdp"
    android:padding="@dimen/_10sdp"
    android:layout_above="@id/textView2"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/_20sdp"
    android:layout_height="@dimen/_60sdp"
    android:text="কমিক্স আপলোড করতে -" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverView"
    android:background="@drawable/back">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:enabled="true"
        app:labelVisibilityMode="unlabeled"
        android:background="@color/persian_red"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menunavbar"
        android:layout_alignParentBottom="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_100sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/comic_cover"
                >
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_180sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/curve"
                >
            </ImageView>

            <TextView
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:id="@+id/comic_name"
                android:layout_below="@id/comic_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#C1000000"
                android:textSize="@dimen/_35sdp"
                android:fontFamily="@font/ss"/>
            <TextView
                android:id="@+id/author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comic_name"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="#000000"
                android:textSize="@dimen/_25sdp"
                android:fontFamily="@font/st"/>
            <TextView
                android:id="@+id/comic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="#C1000000"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@id/author_name"
                android:fontFamily="@font/st"
                />

            <RelativeLayout
                android:id="@+id/layoutLin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comic_description"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:drawableLeft="@drawable/ic_star"
                        />

                    <TextView
                        android:id="@+id/ratingValueOutput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="#C1000000"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/st"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_eye"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/viewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="#C1000000"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/st"
                        android:text="4500"
                        />

                </LinearLayout>
                <Button
                    android:id="@+id/read"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="পড়ুন"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_selector"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/ss"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@id/layoutLin"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_60sdp">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ss"
                    android:textSize="@dimen/_30sdp"
                    android:text="রেটিং :"
                    android:textColor="#C1000000" />

                <RatingBar
                    android:id="@+id/ratingBarInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="0.6"
                    android:scaleX="0.6"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:progressBackgroundTint="@color/lightRed"
                    android:progressTint="@color/persian_red"
                    />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/back">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="#CB000000"
            android:textSize="@dimen/_35sdp"
            android:fontFamily="@font/ss"
            android:text="প্রোফাইল দেখতে হলে" />


        <TextView
            android:id="@+id/login_clicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RedBackGround"
            android:textSize="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_below="@id/textView5"
            android:fontFamily="@font/st"
            android:textStyle="bold"
            android:clickable="true"
            android:text="সাইন আপ/লগ ইন" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:enabled="true"
        app:labelVisibilityMode="unlabeled"
        android:background="@color/persian_red"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menunavbar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="@drawable/back">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/nav_back"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menunavbar"
        android:layout_alignParentBottom="true"/>
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminate="true"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_45sdp"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_80sdp"
                android:fontFamily="@font/ss"
                android:textColor="#CB000000"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="সাইন আপ"
                android:textSize="@dimen/_40sdp"
                />

                <TextView
                android:id="@+id/textemail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/textView"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/ss"
                android:gravity="center_vertical"
                android:text="ই-মেইল :"
                android:textColor="#B9272626"
                android:textSize="@dimen/_28sdp" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SInEmail"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/st"
                        android:textSize="@dimen/_20sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"
                        android:layout_below="@id/textemail"
                        android:layout_alignLeft="@id/textemail"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_edittext"
                        android:textColor="#000000"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textCursorDrawable="@drawable/cursor"
                        />

            <TextView
                android:id="@+id/textpass"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/SInEmail"
                android:layout_alignLeft="@id/SInEmail"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/ss"
                android:gravity="center_vertical"
                android:text="পাসওয়ার্ড :"
                android:textColor="#B9272626"
                android:textSize="@dimen/_28sdp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/xx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textpass"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#C3CA7169"
                android:layout_alignLeft="@id/textpass"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:id="@+id/SInPass"
                    android:inputType="textPassword"
                    android:cursorVisible="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textCursorDrawable="@drawable/cursor"
                    android:background="@drawable/rounded_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textRepass"
                android:layout_width="wrap_content"
                android:fontFamily="@font/ss"
                android:layout_height="@dimen/_40sdp"
                android:text="রিটাইপ পাসওয়ার্ড :"
                android:textColor="#B9272626"
                android:gravity="center_vertical"
                android:layout_below="@id/xx"
                android:layout_alignLeft="@id/xx"
                android:textSize="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_20sdp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/x1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textRepass"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#C3CA7169"
                app:errorIconDrawable="@null"
                android:layout_alignLeft="@id/textpass">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:id="@+id/SInRePass"
                    android:layout_below="@id/textRepass"
                    android:cursorVisible="true"
                    android:inputType="textPassword"
                    android:layout_alignLeft="@id/textpass"
                    android:textSize="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rounded_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/SignUpButton"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/ss"
                android:textSize="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_below="@id/x1"
                android:layout_alignRight="@id/x1"
                android:layout_marginBottom="@dimen/_60sdp"
                android:text="সাইন আপ" />


        </RelativeLayout>

    </ScrollView>




</RelativeLayout>